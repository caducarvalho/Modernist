<h1>Task</h1>
<p><%= @task.task %></p>
<p><%= @task.completed_at.nil? ? 'Incomplete' : @task.completed_at.strftime("Completed at %m/%d/%Y %H:%M") %></p>

<%= form_for @task do |t| %>
  <%= t.hidden_field :task %>
  <%= t.submit @task.completed_at.nil? ? 'Complete' : 'Uncomplete' %>
<% end %>

<ul>
  <li><%= link_to "Back", root_path %></li>
  <li><%= link_to("Delete", task_path(@task), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }) %></li>
</ul>
