<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Get things done!" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
    <ul>
      <li><%= current_user.full_name %></li>
      <li><%= link_to("Logout", '/logout', data: { confirm: 'Are you certain you want to logout?' }) %></li>
    </ul>
    <% end %>

    <%= yield %>
  </body>
</html>
