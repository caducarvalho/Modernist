<%= form_tag '/login', class: 'user' do %>
  <ul>
    <li class="input-group">
      <%= label_tag :email, 'E-mail' %>
      <%= text_field_tag :email %>
    </li>
    <li class="input-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </li>
    <li><%= submit_tag "Login" %></li>
  </ul>
<% end %>

<p class="after">Doesn't have an account? <%= link_to "Signup", '/signup' %></p>
